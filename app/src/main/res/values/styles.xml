<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textColor">@android:color/white</item> -->
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainAppTheme" parent="AppTheme">

    </style>

    <!-- Details activity theme -->
    <style name="DetailsAppTheme" parent="MainAppTheme">

    </style>

    <style name="NoteCommon" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="CategoryName" parent="NoteCommon">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryDescription" parent="NoteCommon">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CategoryHeader" parent="NoteCommon">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteSystem" parent="@style/NoteCommon">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoteUser" parent="@style/NoteCommon">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoteName" parent="@style/NoteCommon">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteValue" parent="@style/NoteCommon">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>



</resources>
