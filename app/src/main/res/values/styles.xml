<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- For checkbox -->
        <item name="android:textColorPrimaryDisableOnly">@color/dimTextColor</item>

        <!-- <item name="android:textColor">@android:color/white</item> -->
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="actionModeBackground">@color/colorHeader</item>
        <item name="android:actionModeBackground">@color/colorHeader</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_cancel</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>

        <!-- Edit style -->
        <item name="colorControlNormal">@color/dimTextColor</item>
        <item name="editTextStyle">@style/SearchEditText</item>
        <item name="autoCompleteTextViewStyle">@style/SearchEditText</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuLargeTextAppearanceStyle</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuSmallTextAppearanceStyle</item>
        <item name="android:dropDownListViewStyle">@style/ListViewStyle</item>
        <item name="dropDownListViewStyle">@style/ListViewStyle</item>
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
        <!-- For background in overflow menu -->
        <item name="android:itemBackground">@drawable/list_lighter_selector</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
       <item name="android:textColorPrimary">@color/brightTextColor</item>
    </style>

    <!-- Edit style for main app theme -->
    <style name="SearchEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorHint">@color/dimTextColor</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:paddingLeft">@dimen/text_margin_half</item>
        <item name="android:layout_margin">1dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/white_border_shape</item>
    </style>

    <style name="PopupMenuLargeTextAppearanceStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="PopupMenuSmallTextAppearanceStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <!-- For list in PopupMenu -->
    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_lighter_selector</item>
        <item name="android:divider">@color/dimTextColor</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:padding">1dip</item>
    </style>

    <style name="DropDownItemStyle" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:background">@drawable/list_selector</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainAppTheme" parent="AppTheme">

    </style>

    <!-- Details activity theme -->
    <style name="DetailsAppTheme" parent="MainAppTheme">

    </style>

    <!-- For AlertDialogs: Password, Preferences dialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/brightTextColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:textColorPrimary">@color/colorHeader</item>
        <item name="android:textColorSecondary">@color/brightTextColor</item>

        <item name="android:background">@color/windowBackground</item>

        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarButtonStyle</item>
    </style>

    <!-- for Ok and Cancel button background -->
    <style name="ButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:background">@drawable/list_selector</item>
    </style>

    <!-- ProgressDialog/Theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/ProgressDialogStyle</item>
        <item name="android:textColorPrimary">@color/brightTextColor</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- ProgressDialog/Style -->
    <style name="ProgressDialogStyle">
        <item name="android:bottomBright">@color/windowBackground</item>
        <item name="android:bottomDark">@color/windowBackground</item>
        <item name="android:bottomMedium">@color/windowBackground</item>
        <item name="android:centerBright">@color/windowBackground</item>
        <item name="android:centerDark">@color/windowBackground</item>
        <item name="android:centerMedium">@color/windowBackground</item>
        <item name="android:fullBright">@color/windowBackground</item>
        <item name="android:fullDark">@color/windowBackground</item>
        <item name="android:topBright">@color/windowBackground</item>
        <item name="android:topDark">@color/windowBackground</item>
    </style>

    <!-- Preferences/Theme -->
    <style name="PreferencesTheme" parent="@style/MainAppTheme">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorSecondary">@color/brightTextColor</item>
        <item name="android:listViewStyle">@style/PreferencesListViewStyle</item>
    </style>

    <!-- For list in Preferences -->
    <style name="PreferencesListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">@drawable/divider_white_black_gradient</item>
    </style>

    <!-- Preferences/Category Divider -->
    <style name="PreferencesCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/divider_orange_black_gradient</item>
    </style>

    <!-- Edit/Theme -->
    <style name="EditTheme" parent="@style/MainAppTheme">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="colorAccent">@color/brightTextColor</item>
        <item name="colorControlNormal">@color/brightTextColor</item>
        <item name="colorControlActivated">@color/brightTextColor</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <!-- Radio Button style, works only via direct set from layout -->
    <style name="RadioButton" parent="@style/MainAppTheme">
        <item name="colorControlNormal">@color/brightTextColor</item>
        <item name="colorControlActivated">@color/brightTextColor</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:background">@drawable/list_selector</item>
    </style>

    <!-- Different elements styles, may need rework -->
    <style name="BrightText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="HeaderText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHeader</item>
    </style>

    <style name="Header1Text" parent="@style/HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2Text" parent="@style/HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header3Text" parent="@style/HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HighlightText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="Highlight2Text" parent="@style/HighlightText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Highlight3Text" parent="@style/HighlightText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DimText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/dimTextColor</item>
    </style>

    <style name="Dim2Text" parent="@style/DimText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Dim3Text" parent="@style/DimText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Text1" parent="@style/BrightText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text2" parent="@style/BrightText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text3" parent="@style/BrightText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text4" parent="@style/BrightText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LabelText" parent="@style/BrightText">
        <item name="android:textSize">16sp</item>
    </style>


</resources>
