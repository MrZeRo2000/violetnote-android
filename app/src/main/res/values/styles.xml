<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textColor">@android:color/white</item> -->
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainAppTheme" parent="AppTheme">

    </style>

    <!-- Details activity theme -->
    <style name="DetailsAppTheme" parent="MainAppTheme">

    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/brightTextColor</item>
        <!-- Used for the title and text -->
        <item name="android:textColor">@color/brightTextColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/ProgressDialogStyle</item>
        <item name="android:textColorPrimary">@color/brightTextColor</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressDialogStyle">
        <item name="android:bottomBright">@color/windowBackground</item>
        <item name="android:bottomDark">@color/windowBackground</item>
        <item name="android:bottomMedium">@color/windowBackground</item>
        <item name="android:centerBright">@color/windowBackground</item>
        <item name="android:centerDark">@color/windowBackground</item>
        <item name="android:centerMedium">@color/windowBackground</item>
        <item name="android:fullBright">@color/windowBackground</item>
        <item name="android:fullDark">@color/windowBackground</item>
        <item name="android:topBright">@color/windowBackground</item>
        <item name="android:topDark">@color/windowBackground</item>
    </style>

    <style name="PreferencesTheme" parent="@style/MainAppTheme" >
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textAppearance">@style/PreferencesTextAppearance</item>
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorPrimary">@color/brightTextColor</item>
        <item name="android:textColorSecondary">@color/headerBackground</item>
        <item name="android:listDivider">@drawable/divider_white_black_gradient</item>
    </style>

    <style name="PreferencesTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorPrimary">@color/brightTextColor</item>
        <item name="android:textColorSecondary">@color/headerBackground</item>
    </style>

    <style name="PreferencesCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/divider_orange_black_gradient</item>
    </style>

    <style name="NoteCommon" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="CategoryName" parent="NoteCommon">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryDescription" parent="NoteCommon">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CategoryHeader" parent="NoteCommon">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteSystem" parent="@style/NoteCommon">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoteUser" parent="@style/NoteCommon">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoteName" parent="@style/NoteCommon">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteValue" parent="@style/NoteCommon">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>



</resources>
