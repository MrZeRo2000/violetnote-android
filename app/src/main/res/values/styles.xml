<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textColor">@android:color/white</item> -->
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainAppTheme" parent="AppTheme">

    </style>

    <!-- Details activity theme -->
    <style name="DetailsAppTheme" parent="MainAppTheme">

    </style>

    <!-- For AlertDialogs: Password, Preferences dialog -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/brightTextColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:textColorPrimary">@color/colorHeader</item>
        <item name="android:textColorSecondary">@color/brightTextColor</item>

        <item name="android:background">@color/windowBackground</item>
    </style>

    <!-- ProgressDialog/Theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/ProgressDialogStyle</item>
        <item name="android:textColorPrimary">@color/brightTextColor</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- ProgressDialog/Style -->
    <style name="ProgressDialogStyle">
        <item name="android:bottomBright">@color/windowBackground</item>
        <item name="android:bottomDark">@color/windowBackground</item>
        <item name="android:bottomMedium">@color/windowBackground</item>
        <item name="android:centerBright">@color/windowBackground</item>
        <item name="android:centerDark">@color/windowBackground</item>
        <item name="android:centerMedium">@color/windowBackground</item>
        <item name="android:fullBright">@color/windowBackground</item>
        <item name="android:fullDark">@color/windowBackground</item>
        <item name="android:topBright">@color/windowBackground</item>
        <item name="android:topDark">@color/windowBackground</item>
    </style>

    <!-- Preferences/Theme -->
    <style name="PreferencesTheme" parent="@style/MainAppTheme" >
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorSecondary">@color/brightTextColor</item>
        <item name="android:listDivider">@drawable/divider_white_black_gradient</item>
        <item name="android:selectableItemBackground">@drawable/list_selector</item>
    </style>

    <!-- Preferences/Category Divider -->
    <style name="PreferencesCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/divider_orange_black_gradient</item>
    </style>

    <!-- Different elements styles, may need rework -->
    <style name="BrightText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/brightTextColor</item>
    </style>

    <style name="HeaderText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHeader</item>
    </style>

    <style name="Header1Text" parent="@style/HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2Text" parent="@style/HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text1" parent="@style/BrightText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text2" parent="@style/BrightText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text3" parent="@style/BrightText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchEditTextTheme">
        <item name="colorControlNormal">@color/dimTextColor</item>
        <item name="editTextStyle">@style/SearchEditText</item>
    </style>
    
    <style name="SearchEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/brightTextColor</item>
        <item name="android:textColorHint">@color/dimTextColor</item>
    </style>


</resources>
