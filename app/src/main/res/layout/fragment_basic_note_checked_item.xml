<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:paddingTop="@dimen/text_margin"
    android:paddingBottom="@dimen/text_margin"
    android:paddingLeft="@dimen/text_margin_half"
    android:paddingRight="@dimen/text_margin_half"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checked"
        android:layout_alignParentLeft="true"
        android:clickable="false"
        android:background="@null"
        android:theme="@style/EditTheme"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/checked"
        android:layout_toLeftOf="@+id/last_modified"
        android:textAppearance="@style/Text2"
        android:text="Value"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_modified"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/text_margin_half"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Dim3Text"
        />
</RelativeLayout>
