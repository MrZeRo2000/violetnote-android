<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:paddingTop="@dimen/text_margin"
    android:paddingBottom="@dimen/text_margin"
    android:paddingLeft="@dimen/text_margin_half"
    android:paddingRight="@dimen/text_margin_half"
    >

    <ImageView
        android:layout_width="@dimen/priority_image_size"
        android:layout_height="@dimen/priority_image_size"
        android:paddingStart="@dimen/text_margin_half"
        android:paddingEnd="@dimen/text_margin_half"
        android:paddingLeft="@dimen/text_margin_half"
        android:paddingRight="@dimen/text_margin_half"
        android:id="@+id/priority"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_description_priority"
        android:visibility="gone"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checked"
        android:layout_toEndOf="@+id/priority"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:background="@null"
        android:theme="@style/EditTheme"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/checked"
        android:layout_toStartOf="@+id/price"
        android:textAppearance="@style/Text2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/text_margin_half"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Highlight3Text"
        />
</RelativeLayout>
