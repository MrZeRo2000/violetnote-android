<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:paddingTop="@dimen/text_margin"
    android:paddingBottom="@dimen/text_margin"
    android:paddingLeft="@dimen/text_margin_half"
    android:paddingRight="@dimen/text_margin_half"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/event_time"
        android:layout_toLeftOf="@+id/event_time"
        android:textAppearance="@style/Text3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/text_margin_half"
        android:layout_marginLeft="@dimen/text_margin_half"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Dim3Text"
        />

</RelativeLayout>