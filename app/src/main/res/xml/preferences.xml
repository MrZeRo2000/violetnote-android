<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_title_interface"
        android:layout="@layout/preferences_category"
        >
        <Preference
            android:key="pref_interface_basic_note_groups"
            android:title="@string/pref_title_interface_basic_note_groups"
            />
        <CheckBoxPreference
            android:key="pref_interface_checked_last"
            android:title="@string/pref_title_interface_checked_last"
            android:defaultValue="false"
            />
        <Preference
            android:key="pref_interface_checked_update_interval"
            android:title="@string/pref_title_interface_checked_update_interval"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_title_pass_note_data"
        android:layout="@layout/preferences_category"
        >
        <Preference
            android:key="pref_source_type"
            android:title="@string/pref_title_source_type"
            />
        <Preference
            android:key="pref_source_path"
            android:title="@string/pref_title_source_path"
            />
        <com.romanpulov.violetnote.view.core.ProgressPreference
            android:key="pref_load"
            android:title="@string/pref_title_load"
            />
        <Preference
            android:key="pref_delete"
            android:title="@string/pref_title_delete"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_title_local_backup"
        android:layout="@layout/preferences_category"
        >
        <Preference
            android:key="pref_basic_note_local_backup"
            android:title="@string/pref_title_basic_note_backup"
            android:summary="@string/pref_summary_basic_note_backup"
            />
        <Preference
            android:key="pref_basic_note_local_restore"
            android:title="@string/pref_title_basic_note_restore"
            android:summary="@string/pref_summary_basic_note_restore"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_title_cloud_backup"
        android:layout="@layout/preferences_category"
        >
        <Preference
            android:key="pref_basic_note_cloud_storage"
            android:title="@string/pref_title_basic_note_cloud_storage_type"
            android:summary="@string/pref_summary_basic_note_cloud_storage_type"
            />
        <com.romanpulov.violetnote.view.core.ProgressPreference
            android:key="pref_basic_note_cloud_backup"
            android:title="@string/pref_title_basic_note_cloud_backup"
            android:summary="@string/pref_summary_basic_note_cloud_backup"
            />
        <com.romanpulov.violetnote.view.core.ProgressPreference
            android:key="pref_basic_note_cloud_restore"
            android:title="@string/pref_title_basic_note_cloud_restore"
            android:summary="@string/pref_summary_basic_note_cloud_restore"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_title_account"
        android:layout="@layout/preferences_category"
        >
        <Preference
            android:key="pref_account_dropbox"
            android:title="@string/pref_title_account_dropbox"
            />
        <Preference
            android:key="pref_account_onedrive"
            android:title="@string/pref_title_account_onedrive"
            />
        <Preference
            android:key="pref_account_gdrive"
            android:title="@string/pref_title_account_gdrive"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_title_miscellaneous"
        android:layout="@layout/preferences_category"
        >
        <CheckBoxPreference
            android:key="pref_logging"
            android:title="@string/pref_title_miscellaneous_logging"
            android:defaultValue="false"
            />
    </PreferenceCategory>
</PreferenceScreen>